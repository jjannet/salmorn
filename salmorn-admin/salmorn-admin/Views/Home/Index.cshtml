@model salmorn_admin.Models.Screens.DashboardModel
@{
    ViewBag.Title = "Home Page";
}


<section ng-controller="PostController" ng-init="initialProduct(@Model)">
  <div class="row">
      <div class="col-lg-3 col-md-6">
          <div class="widget-simple text-center card-box">
              <h3 class="text-success counter font-bold mt-0">@Model.totalOrder.ToString("N0")</h3>
              <p class="text-muted mb-0">
                  <a href="@Url.Action("Index", "Order")">จำนวนรายการ Order ที่ยังไม่ได้จัดการ</a>
              </p>
          </div>
      </div>

      <div class="col-lg-3 col-md-6">
          <div class="widget-simple text-center card-box">
              <h3 class="text-info counter font-bold mt-0">@Model.payOrder.ToString("N0")</h3>
              <p class="text-muted mb-0">
                  <a href="@Url.Action("Index", "Order")">จำนวนรายการ Order ที่จ่ายเงินแล้ว</a>
              </p>
          </div>
      </div>

      <div class="col-lg-3 col-md-6">
          <div class="widget-simple text-center card-box">
              <h3 class="text-warning counter font-bold mt-0">@Model.shippingOrder.ToString("N0")</h3>
              <p class="text-muted mb-0">
                  <a href="@Url.Action("Index", "Shipping")">จำนวนรายการ ส่งของ ที่ยังไม่ได้จัดการ</a>
              </p>
          </div>
      </div>
  </div>
</section>





@section Scripts {
    <script type="text/javascript" src="~/Content/js/controllers/dashboard.js" ></script>
}