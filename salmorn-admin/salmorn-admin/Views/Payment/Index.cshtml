
@{
    ViewBag.Title = "จัดการ การแจ้งการโอนเงิน";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section ng-controller="PaymentsController" ng-init="initialScreen()">

    <div class="row">

        <div class="col-lg-12">
            <div class="card-box">
                <h4 class="m-t-0 header-title">รายการ แจ้งโอนเงิน</h4>


                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">วันที่แจ้งโอน</th>
                            <th class="text-center">รหัส Order</th>
                            <th class="text-center">ชื่อ - นามสกุล</th>
                            <th class="text-center">จำนวนเงินที่แจ้ง</th>
                            <th class="text-center">ชนิดการจ่าย</th>
                            <th class="text-center">Slip</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="p in payments">
                            <td class="text-center">{{p.paymentDate | date:'dd/MM/yyyy HH:mm'}}</td>
                            <td class="text-center"><a href="#" ng-click="openOrderInfo(p)">{{p.orderCode}}</a></td>
                            <td class="text-center">{{p.firstName + ' ' + p.lastName}}</td>
                            <td class="text-center">{{numberWithCommas(p.money)}}</td>
                            <td class="text-center">{{p.paymentType}}</td>
                            <td class="text-center">
                                <a href="{{ p.L_FileUpload.fileName }}" class="image-link">
                                    <img src="{{ p.L_FileUpload.fileName }}" style="max-height: 150px; max-width: 150px;" />
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
    <!-- end row -->

</section>

@section Styles {
    <link rel="stylesheet" href="~/plugins/switchery/switchery.min.css" />
    <link href="~/plugins/summernote/summernote.css" rel="stylesheet" />
    <link href="~/plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />
    <link href="~/plugins/magnific-popup/dist/magnific-popup.css" rel="stylesheet" />

    <style>
        .error {
            margin-left: 10px;
            font-size: 16px;
        }
    </style>
}

@section Scripts {

    <script type="text/javascript" src="~/plugins/switchery/switchery.min.js"></script>
    <script src="~/plugins/summernote/summernote.min.js"></script>
    <script src="~/plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js" type="text/javascript"></script>
    <script src="~/plugins/magnific-popup/dist/jquery.magnific-popup.min.js" type="text/javascript"></script>

    <script type="text/javascript" src="~/Content/js/controllers/payments.js"></script>
}


