
@{
    ViewBag.Title = "PostalCoverPrint";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}


<section ng-controller="PostalCoverPrintController" ng-init="initialScreen()">

    <div class="cover-box" ng-repeat="s in shippings">
        <div class="cover-sender">
            <div class="sender-logo">
                <img src="~/Content/images/PSK48-LOGO2clear.png" />
            </div>
            <div class="sender-right">
                <div class="sender-box">
                    <div class="sender-box-title">
                        ชื่อที่อยู่ผู้ส่ง / SENDER
                    </div>
                    <div class="sender-box-address">
                        <p>บริษัท BNK48 Office จำกัด</p>
                        <p>23/85 ซอยลาดพร้าว 25 ถนนลาดพร้าว</p>
                        <p>แขวงจันทรเกษม เขตจตุจักร</p>
                        <p>กรุงเทพมหานคร  10900</p>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="cover-middle">
            หากกล่องมีร่องรอยการแกะ ห้ามรับทุกกรณี
        </div>
        <div class="cover-receiver">
            <div class="receive-box">
                <div class="receive-box-title">
                    ชื่อที่อยู่ผู้รับ / RECEIVE
                </div>
                <div class="receive-box-address">
                    <p>{{s.firstName + ' ' + s.lastName}}</p>
                    <p>{{s.address}}</p>
                    <p>จังหวัด {{s.province}}  <b>{{s.zipCode}}</b></p>
                </div>
            </div>
        </div>
    </div>

</section>


@section Styles {
    <style>
        .clearfix {
            clear: both;
        }
        div.cover-box {
            display: block;
            border: 1.5px solid #555;
            width: 20cm;
            height: 9cm;
        }
            div.cover-box{
                margin-bottom: 0.5cm;
            }

        div.cover-sender, div.cover-receiver, div.cover-middle {
            display: block;
            width: 100%;
            height: 4cm;
        }

        div.cover-middle {
            height: 1cm;
            background-color: #efefef;
            border-top: 1px solid #555;
            border-bottom: 1px solid #555;
            font-weight: bold;
            text-align: center;
            padding-top: 5px;
        }

        div.sender-logo {
            display: block;
            float: left;
            width: 4cm;
            padding: 0.60cm;
        }
            div.sender-logo > img {
                display: block;
                height: 3cm;
                margin-left: auto;
                margin-right: auto;
                filter: gray; /* IE6-9 */
                -webkit-filter: grayscale(1); /* Google Chrome, Safari 6+ & Opera 15+ */
                filter: grayscale(1); /* Microsoft Edge and Firefox 35+ */
            }

        div.sender-right {
            display: block;
            float: left;
            width: 14.9cm;
            text-align: center;
        }

        div.sender-box {
            display: block;
            width: 12cm;
            margin-left: 112px;
            padding: 5px;
            padding-right: 10px;
        }

        div.sender-box-title, div.receive-box-title {
            text-align: right;
            padding: 5px;
            font-weight: bold;
        }
        div.sender-box-address, div.receive-box-address {
            text-align: right;
            padding: 10px;
            padding-bottom: 0px;
        }
            div.sender-box-address > p, div.receive-box-address > p {
                line-height: 6px;
            }
        div.receive-box-address {
            text-align: left;
        }
        div.receive-box {
            display: block;
            width: 19cm;
            height: 3.9cm;
            padding: 10px;
        }
        div.receive-box-title {
            text-align:left;
            background-color: #fff;
            color: #000;
        }
        div.receive-box-address > p > b {
            font-size: 22px;
        }

    </style>
}

@section Scripts {
    <script type="text/javascript" src="~/Content/js/report-controllers/PostalCoverPrint.js"></script>
}