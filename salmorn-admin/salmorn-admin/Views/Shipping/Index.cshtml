
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section ng-controller="ShippingsController" ng-init="initialScreen()">

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <h4 class="m-t-0 header-title"><b>ค้นหารายการขนส่ง</b></h4>
                <div class="row">

                    <div class="col-12">
                        <div class="p-20">
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Shipping code</label>
                                <div class="col-lg-4">
                                    <input type="text" ng-model="orderCode" class="form-control" ng-change="searchOrders()" />
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <!-- end row -->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-lg-3">
                        <button class="btn btn-warning" ng-disabled="!isCanPrint()">Print ใบปะหน้าจากรายการที่เลือก</button>
                    </div>
                    <div class="col-lg-9 text-right">
                        <button class="btn btn-info" ng-disabled="!isCanUpdateShipping()">Update รายการที่เลือกเป็น ส่งสินค้าแล้ว</button>
                        <button class="btn btn-danger" ng-disabled="!isCanCancelOrder()">ยกเลิกรายการที่เลือก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">

                <div class="table-rep-plugin">
                    <div class="table-responsive" data-pattern="priority-columns">
                        <table id="tech-companies-1" class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">เลือก</th>
                                    <th class="text-center">Shipping code</th>
                                    <th class="text-center" data-priority="1">Shipping date</th>
                                    <th class="text-center" data-priority="2">ส่งของแล้ว</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="o in shippings">
                                    <th class="text-center"><input type="checkbox" ng-model="o.select" /></th>
                                    <th class="text-center">{{o.code}}</th>
                                    <td class="text-center">{{o.shippingDate | date : 'dd/MM/yyyy HH:mm'}}</td>
                                    <td class="text-center">
                                        <i class="ion-checkmark" ng-hide="!o.isShipping"></i>
                                        <i class="ion-close" ng-hide="o.isShipping"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>

</section>

@section Styles {


}

@section Scripts {
    <script type="text/javascript" src="~/Content/js/controllers/shippings.js"></script>
}

