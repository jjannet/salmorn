
@{
    ViewData["Title"] = "Orders ที่ยังไม่เสร็จสิ้น";
    Layout = "~/Views/Shared/_ShopBackEndLayout.cshtml";
}

<section ng-controller="OrdersController" ng-init="initialScreen()">

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <h4 class="m-t-0 header-title"><b>ค้นหา Order</b></h4>
                <div class="row">

                    <div class="col-12">
                        <div class="p-20">
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Order code</label>
                                <div class="col-lg-4">
                                    <input type="text" ng-model="orderCode" class="form-control" ng-change="searchOrders()" />
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <!-- end row -->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-lg-3">
                        <button class="btn btn-warning">สร้างรายการส่งของจากรายการที่เลือก</button>
                    </div>
                    <div class="col-lg-9 text-right">
                        <button class="btn btn-success">Update รายการที่เลือกเป็น จ่ายเงินแล้ว</button>
                        <button class="btn btn-info">Update รายการที่เลือกเป็น ส่งสินค้าแล้ว</button>
                        <button class="btn btn-danger">ยกเลิกรายการที่เลือก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">

                <div class="table-rep-plugin">
                    <div class="table-responsive" data-pattern="priority-columns">
                        <table id="tech-companies-1" class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">เลือก</th>
                                    <th class="text-center">Order code</th>
                                    <th class="text-center" data-priority="1">Order date</th>
                                    <th class="text-center" data-priority="1">วันที่จ่ายเงิน</th>
                                    <th class="text-center" data-priority="2">จ่ายเงินแล้ว</th>
                                    <th class="text-center" data-priority="2">ส่งของแล้ว</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="o in orders">
                                    <th class="text-center"><input type="checkbox" ng-model="o.select" /></th>
                                    <th class="text-center">{{o.code}}</th>
                                    <td class="text-center">{{o.orderDate | date : 'dd/MM/yyyy HH:mm'}}</td>
                                    <td class="text-center">{{o.payDate | date : 'dd/MM/yyyy HH:mm'}}</td>
                                    <td class="text-center">
                                        <i class="ion-checkmark" ng-hide="!o.isPay"></i>
                                        <i class="ion-close" ng-hide="o.isPay"></i>
                                    </td>
                                    <td class="text-center">
                                        <i class="ion-checkmark" ng-hide="!o.isShipping"></i>
                                        <i class="ion-close" ng-hide="o.isShipping"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>

</section>

@section Styles {

    <link href="~/Content/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">

}

@section Scripts {
    <script src="~/Content/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/Content/ShopManage/pages/Controllers/Orders.js"></script>
}