@model string

@{ 
    string uploadUrl = "";
    string getFileDataUrl = "";
    if(Model == "product")
    {
        uploadUrl = "/File/UploadProductImage";
        getFileDataUrl = "/File/GetProductImages";
    }
}

<!--  Modal content for the above example -->
<div class="modal fade bs-example-modal-lg" id="file-control-dialog" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <ul class="nav nav-tabs tabs-bordered">
                    <li class="nav-item">
                        <a href="#upload" data-toggle="tab" aria-expanded="false" class="nav-link active">
                            Upload file
                        </a>
                    </li>
                    <li class="nav-item" style="display: none;">
                        <a href="#all-images" data-toggle="tab" aria-expanded="true" class="nav-link">
                            เลือกจากคลังภาพ
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="upload">

                        <div class="row">
                            <div class="col-md-12 portlets">
                                <!-- Your awesome content goes here -->
                                <div class="m-b-30">
                                    <form action="@uploadUrl" class="dropzone" id="file-control"></form>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="tab-pane fade" id="all-images" style="max-height: 500px; overflow-y: scroll;">
                        <input type="hidden" id="file-control-get-url" value="@getFileDataUrl" />


                        <div class="row" id="file-control-image-list">
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="fileControlSubmitImage()">เพิ่ม</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


